<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="3dp"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/mall_searchbtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:button="@null"
            android:drawableLeft="@drawable/big" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"></View>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/mall_fragment_banner"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </com.youth.banner.Banner>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/mall_btn1"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:onClick="onClick"
                        android:text="智能硬件"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_1"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/mall_btn2"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:onClick="onClick"
                        android:text="保险产品"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_1"
                        android:textSize="15sp" />
                    <Button
                        android:id="@+id/mall_btn3"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:onClick="onClick"
                        android:text="运动健身"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_1"
                        android:textSize="15sp" />
                    <Button
                        android:id="@+id/mall_btn4"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:onClick="onClick"
                        android:text="血压血糖"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_1"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/mall_btn5"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:onClick="onClick"
                        android:text="优惠套餐"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_1"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/mall_btn6"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:onClick="onClick"
                        android:text="保健药品"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_1"
                        android:textSize="15sp" />
                </LinearLayout>
            </HorizontalScrollView>
                <com.example.administrator.steps_count.mall.MyGridview
                    android:id="@+id/mall_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="2">
                </com.example.administrator.steps_count.mall.MyGridview>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
