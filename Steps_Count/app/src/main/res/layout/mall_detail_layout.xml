<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/touming"
        android:id="@+id/up">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/mall_detail_exit"
            android:src="@drawable/exit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mall_detail_shop"
            android:textSize="30sp"
            android:layout_marginLeft="80dp"
            android:text="商品"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mall_detail_detail"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:text="详情"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/touming"
        android:id="@+id/linear"
        android:layout_below="@id/up">
        <View
            android:id="@+id/mall_detail_line1"
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_marginLeft="120dp"
            android:background="@color/black"/>
        <View
            android:id="@+id/mall_detail_line2"
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:background="@color/touming"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mall_detail_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear"
        android:layout_above="@+id/bottom"
    >
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/mall_detail_makeorder"
            android:text="立即下单"
            />
    </LinearLayout>

</RelativeLayout>
