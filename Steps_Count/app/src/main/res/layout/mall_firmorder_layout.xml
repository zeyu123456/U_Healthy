<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
   <RelativeLayout
       android:id="@+id/relative_up"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       >
      <ImageView
          android:id="@+id/mall_firmorder_exit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/exit"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="确认订单"
          android:layout_centerInParent="true"
          android:textSize="30sp" />
   </RelativeLayout>


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/relative_up">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:orientation="vertical">

         <FrameLayout
             android:id="@+id/mall_firmorder_framelayout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/mall_firmorder_Radiolayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <RadioButton
                android:id="@+id/mall_firmorder_rb_addaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="请选择收货地址"
                android:button="@null"
                android:drawableLeft="@drawable/more"
                android:textSize="30sp"/>
         </FrameLayout>
            <FrameLayout
                android:id="@+id/mall_firmorder_addresslayout"
                android:layout_width="match_parent"
                android:layout_height="100dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:orientation="vertical">
                  <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="收货地址"/>
                  <RelativeLayout

                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="刘泽宇"
                      android:textSize="25sp"/>
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="100dp"
                         android:text="17761241342"
                         android:textSize="25sp"/>
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:text="更改"
                         android:textSize="25sp"/>
                  </RelativeLayout>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="四川省成都市高新西区百叶路一号"
                      android:textSize="20sp"/>
               </LinearLayout>
            </FrameLayout>
         </FrameLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="140dp"
             android:padding="10dp">
            <ImageView
                android:id="@+id/mall_firmorder_img"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
               <TextView
                   android:id="@+id/mall_firmorder_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:textSize="30sp"/>
               <TextView
                   android:id="@+id/mall_firmorder_price"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:textSize="30sp"
                   />
            </LinearLayout>
         </LinearLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买数量"
                android:textSize="20sp"
                />
            <ImageView
                android:id="@+id/mall_firmorder_less"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_toLeftOf="@+id/mall_firmorder_num"
                android:src="@drawable/less"/>
            <TextView
                android:id="@+id/mall_firmorder_num"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:text="1"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/mall_firmorder_more"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/mall_firmorder_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/more"/>
         </RelativeLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="优惠信息"
                android:textSize="20sp"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="代金券"
                android:textSize="20sp"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="费用明细"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>
         </LinearLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单价"
                android:textSize="20sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/mall_firmorder_unitprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
         </RelativeLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费"
                android:textSize="20sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/mall_firmorder_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
         </RelativeLayout>
      </LinearLayout>
   </ScrollView>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:layout_alignParentBottom="true">
      <TextView
          android:id="@+id/bottom_left"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:text="实付款:￥"
          android:textSize="30sp"/>
      <TextView
          android:id="@+id/mall_firmorder_allmoney"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="25sp"
          android:text=""
          android:layout_centerVertical="true"
          android:layout_toRightOf="@id/bottom_left"/>
      <Button
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:background="@color/red"
          android:textColor="@color/white"
          android:text="提交订单"
          android:textSize="25sp"/>
   </RelativeLayout>
</RelativeLayout>
